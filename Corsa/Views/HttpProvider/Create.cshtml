@using Corsa.Domain.Processing.Moduls
@model Corsa.Models.Moduls.HttpProviderModuleViewModel
@{
    ViewData["Title"] = "Creation Yandex Direct Module";
}


@section BreadCrumb{
    @{
            var items = new BreadCrumbItem[]
            {
new BreadCrumbItem("Projects", Url.Action("Index","Project")),
new BreadCrumbItem(Model.ProjectName, Url.Action("Index","Project",new {Id=Model.Project})),
new BreadCrumbItem("Configuration", Url.Action("Config","Project", new {Id =Model.Project })),
new BreadCrumbItem("Creation of Http Provider Direct", Url.Action("Create","HttpProvider"),true)
            };
        }

    <breadcrumb items="@items"></breadcrumb>
}

@section ActionBar{
    <ul class="nav action-navbar-list">
        <li class="action-item">
            <button type="button" form="requestForm" class="btn btn-primary" onclick="Save()">Save</button>
        </li>
    </ul>
}
    <div class="crs-container container-fluid">

        @using (Html.BeginForm("Create", "HttpProvider"))
    {
        @Html.AntiForgeryToken();
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <input type="hidden" name="Project" value="@Model.Project">

    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade pt-4 show active" id="general" role="tabpanel" aria-labelledby="general-tab">

            <div class="col-6">

                <div class="form-group">
                    <label for="nameInputText">Name</label>
                    <input type="text" name="Name" class="form-control" id="nameInputText" aria-describedby="nameInputTextHelp" placeholder="Enter name">
                </div>

                <div class="form-group">
                    <label for="descriptionInputText">Description</label>
                    <input type="text" name="Description" class="form-control" id="descriptionInputText" aria-describedby="descriptionInputText" placeholder="">
                </div>

                <h4> Proxy</h4>

                <div class="form-group">
                    <label for="proxyHostInputText">Host</label>
                    <input type="text" name="ProxyHost" class="form-control" id="proxyHostInputText" aria-describedby="proxyHostInputText" placeholder="">
                </div>

                <div class="form-group">
                    <label for="proxyPortInputText">Port</label>
                    <input type="text" name="ProxyPort" class="form-control" id="proxyPortInputText" aria-describedby="proxyPortInputText" placeholder="">
                </div>

                <div class="form-group">
                    <label for="proxyUserInputText">User</label>
                    <input type="text" name="ProxyUser" class="form-control" id="proxyUserInputText" aria-describedby="proxyUserInputText" placeholder="">
                </div>

                <div class="form-group">
                    <label for="passwordInputText">Password</label>
                    <input type="password" name="ProxyPassword" class="form-control" id="passwordInputText" aria-describedby="passwordInputText" placeholder="">
                </div>


            </div>
        </div>

    </div>

}

    </div>

<script>
    function Save() {
        $("form").submit();
    }
</script>