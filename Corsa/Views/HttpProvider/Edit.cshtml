@model Corsa.Models.Moduls.HttpProviderModuleViewModel

@{
    ViewData["Title"] = $"Edit : {Model.Id}";
}


@section BreadCrumb{
    @{
        var items = new BreadCrumbItem[]
        {
new BreadCrumbItem("Projects", Url.Action("Index","Project")),
new BreadCrumbItem(Model.ProjectName, Url.Action("Index","Project",new {Id=Model.Project})),
new BreadCrumbItem("Config", Url.Action("Config","Project")),
new BreadCrumbItem(Model.Name, Url.Action("Index","HttpProvider", new {Id=Model.Id})),
new BreadCrumbItem("Edit", Url.Action("Edit","HttpProvider", new {Id=Model.Id}),true)
        };
    }

    <breadcrumb items="@items"></breadcrumb>
}

@section ActionBar{
    <ul class="crs-toolbar-btn__list nav">
        <li class="crs-toolbar-btn__item">
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Delete","HttpProvider",new {Id=Model.Id})'">Delete</button>
        </li>
        <li class="crs-toolbar-btn__item">
            <button type="button" class="btn btn-primary" onclick="Save()">Save</button>
        </li>
    </ul>
}

    <div class="crs-container container-fluid">



        @using (Html.BeginForm("Edit", "HttpProvider"))
    {
        @Html.AntiForgeryToken();
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <input type="hidden" name="Id" value="@Model.Id">

    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade pt-4 show active" id="general" role="tabpanel" aria-labelledby="general-tab">

            <div class="col-6">

                <div class="form-group">
                    <label for="nameInputText">Name</label>
                    <input type="text" value="@Model.Name" name="Name" class="form-control" id="nameInputText" aria-describedby="nameInputTextHelp" placeholder="Enter name">
                </div>

                <div class="form-group">
                    <label for="descriptionInputText">Description</label>
                    <input type="text" value="@Model.Description" name="Description" class="form-control" id="descriptionInputText" aria-describedby="descriptionInputText" placeholder="">
                </div>

                <h4> Proxy</h4>

                <div class="form-group">
                    <label for="proxyHostInputText">Host</label>
                    <input type="text" name="ProxyHost" value="@Model.ProxyHost" class="form-control" id="proxyHostInputText" aria-describedby="proxyHostInputText" placeholder="">
                </div>

                <div class="form-group">
                    <label for="proxyPortInputText">Port</label>
                    <input type="text" name="ProxyPort" value="@Model.ProxyPort" class="form-control" id="proxyPortInputText" aria-describedby="proxyPortInputText" placeholder="">
                </div>

                <div class="form-group">
                    <label for="proxyUserInputText">User</label>
                    <input type="text" name="ProxyUser" value="@Model.ProxyUser" class="form-control" id="proxyUserInputText" aria-describedby="proxyUserInputText" placeholder="">
                </div>

                <div class="form-group">
                    <label for="passwordInputText">Password</label>
                    <input type="password" name="ProxyPassword" value="@Model.ProxyPassword" class="form-control" id="passwordInputText" aria-describedby="passwordInputText" placeholder="">
                </div>

            </div>
        </div>

    </div>


}
    </div>


<script>
    function Save() {
        $("form").submit();
    }
</script>