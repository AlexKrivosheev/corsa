@using Corsa.Domain.Processing.Moduls
@model Corsa.Models.Moduls.EmailNotifViewModel
@{
    ViewData["Title"] = "Creation Email Notificaiton Module";
}


@section BreadCrumb{
    @{
            var items = new BreadCrumbItem[]
            {
new BreadCrumbItem("Projects", Url.Action("Index","Project")),
new BreadCrumbItem(Model.ProjectName, Url.Action("Index","Project",new {Id=Model.Project})),
new BreadCrumbItem("Configuration", Url.Action("Config","Project", new {Id =Model.Project })),
new BreadCrumbItem("Creation of Email notification module", Url.Action("Create","EmailNotif"),true)
            };
        }

    <breadcrumb items="@items"></breadcrumb>
}

@section ActionBar{
    <ul class="nav action-navbar-list">
        <li class="action-item">
            <button type="button" form="requestForm" class="btn btn-primary" onclick="Save()">Save</button>
        </li>
    </ul>
}
    <div class="crs-container crs-email-notif container-fluid">



        @using (Html.BeginForm("Create", "EmailNotif"))
    {
        @Html.AntiForgeryToken();
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <input type="hidden" name="Project" value="@Model.Project">


    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade pt-4 show active" id="general" role="tabpanel" aria-labelledby="general-tab">

            <div class="col-6">

                <div class="form-group">
                    <label for="inputName">Name</label>
                    <input type="text" name="Name" class="form-control" id="inputName" aria-describedby="inputName" placeholder="Enter name">
                </div>

                <div class="form-group">
                    <label for="inputDescription">Description</label>
                    <input type="text" name="Description" class="form-control" id="inputDescription" aria-describedby="inputDescription" placeholder="">
                </div>

                <h4>Notification Settings</h4>

                <div class="form-group">
                    <label for="inputParticipants">Participants</label>
                    <input type="text" name="Participants" class="form-control" id="inputParticipants" aria-describedby="inputParticipants" placeholder="">
                </div>

                <div class="form-group">
                    <label for="inputSender">Sender</label>
                    <input type="text" name="Sender" class="form-control" id="inputHostName" aria-describedby="inputSender" placeholder="">
                </div>

                <h4> Email Settings</h4>

                <div class="form-group">
                    <label for="inputHostName">HostName</label>
                    <input type="text" name="HostName" class="form-control" id="inputHostName" aria-describedby="inputHostName" placeholder="">
                </div>

                <div class="form-group">
                    <label for="inputPort">Port</label>
                    <input type="text" name="Port" class="form-control" id="inputPort" aria-describedby="inputPort" placeholder="">
                </div>

                <div class="form-group dropdown">
                    <div class="">EnableSsl</div>
                    <select name="EnableSsl" class="form-control">
                        <option class="" value="true"> True</option>
                        <option class="" value="false"> False</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="inputUser">User</label>
                    <input type="text" name="User" class="form-control" id="inputUser" aria-describedby="inputUser" placeholder="">
                </div>

                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="Password" class="form-control" id="inputPassword" aria-describedby="inputPassword" placeholder="">
                </div>

            </div>
        </div>

    </div>

   


}

    </div>


<script>
    function Save() {
        $("form").submit();
    }
    $('input[type="checkbox"]').change(function () {
        this.value = (Number(this.checked));
    })
</script>